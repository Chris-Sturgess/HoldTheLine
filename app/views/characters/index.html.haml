.characterTable
	.characterHeaders
		.characterHeader
			Name
		.characterHeader
			Links
	-@characters.each do |character|
		.characterDiv
			.characterName
				=character.firstName + " " + character.lastName
			.characterLinks
				=link_to "Show", character_path(character)
				=link_to "Edit", edit_character_path(character)
				=link_to "Destroy", character_path(character),
					method: :delete,
					data: { confirm: 'Are you sure?' }

=link_to "Create New", new_character_path